citHeader("To cite the `spatialfusion` package in publications use:")

citEntry(entry = "Article",
  title        = "Combining heterogeneous spatial datasets with process-based spatial fusion models: a unifying framework",
  author       = personList(as.person("Craig Wang"), as.person("Reinhard Furrer"), as.person("for the SNC Study Group")),
  journal      = "Computational Statistics & Data Analysis",
  year         = "2021",
  doi          = "10.1016/j.csda.2021.107240",
  textVersion  =
  paste("Wang, C., Furrer, R. and for the SNC Study Group (2021). Combining heterogeneous spatial datasets with process-based spatial fusion models: a unifying framework, Computational Statistics & Data Analysis.")
)

citEntry(entry = "Manual",
  title = "spatialfusion: Multivariate Analysis of Spatial Data Using a Unifying Spatial Fusion Framework ",
  author = personList(as.person("Craig Wang"), as.person("Reinhard Furrer")),
  year = "2021",
  note = "R package version 0.6",
  url = "https://CRAN.R-project.org/package=spatialfusion",
  textVersion  =
  paste("Wang, C. and Furrer, R. (2019). spatialfusion: Multivariate Analysis of Spatial Data Using a Unifying Spatial Fusion Framework . R package version 0.6. https://CRAN.R-project.org/package=spatialfusion")
)
